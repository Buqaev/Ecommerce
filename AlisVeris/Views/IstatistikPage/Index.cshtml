@model List<AlisVeris.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";

    double cem = 0;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
