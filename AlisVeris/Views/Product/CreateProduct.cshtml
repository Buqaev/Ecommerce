@model AlisVeris.Models.ProDto
@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">

        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="@Url.Action("Create","Product")" enctype="multipart/form-data" role="form">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Ad</label>
                    <input type="text" name="Ad" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Acixlama</label>
                    <input type="text" name="Acixlama" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Description</label>
                    <input type="text" name="Description" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Material</label>
                    <input type="text" name="Material" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">EnerjiTipi</label>
                    <input type="text" name="EnerjiTipi" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Voltaj</label>
                    <input type="text" name="Voltaj" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Ceki</label>
                    <input type="text" name="Ceki" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Eni</label>
                    <input type="text" name="Eni" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Uzunluq</label>
                    <input type="text" name="Uzunluq" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">AlisQiymeti</label>
                    <input type="text" name="AlisQiymeti" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">SatisQiymeti</label>
                    <input type="text" name="SatisQiymeti" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">StokSayi</label>
                    <input type="text" name="StokSayi" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Reng</label>
                    <input type="text" name="Reng" class="form-control" id="exampleInputEmail1" placeholder="Ad Elave Edin">
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail1">Kateqoriya</label>
                    <select name="ProductCategoryaId" class="form-control">
                        <option>--Secin</option>
                        @foreach (var x in Model.Categories)

                        {
                            <option value="@x.Id">@x.Ad</option>
                        }

                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Masin</label>
                    <select name="CarId" class="form-control">
                        <option>--Secin</option>
                        @foreach (var x in Model.Cars)

                        {
                            <option value="@x.Id">@x.Marka</option>
                        }

                    </select>
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail1">Sekil</label>
                    <input type="file" name="Sekil" class="form-control" id="exampleInputEmail1">
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Yarat</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
    <!-- Form Element sizes -->



</div>

